<openerp>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="res_company_city_form">
      <field name="name">res.company.city.form</field>
      <field name="inherit_id" ref="base.view_company_form" />
      <field name="model">res.company</field>
      <field name="arch" type="xml">
        <field name="city" position="replace">
          <field name="city_id" placeholder="City" class="o_address_city" options='{"no_open": True}' on_change="onchange_city(city_id)"/>
          <field name="city" invisible="1"/>
        </field>
      </field>
    </record>
    
  </data>
</openerp>
