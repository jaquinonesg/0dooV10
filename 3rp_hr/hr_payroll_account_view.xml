<?xml version="1.0"?>
<openerp>
    <data>
       
        <record model="ir.ui.view" id="view_hr_payslip_form">
            <field name="name">hr.payslip.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_to']" position="replace">
                    <field name="date_to" on_change="onchange_employee_id(date_from, date_to, employee_id, contract_id)"/>
                </xpath>
                <!--
                                <field name="paid" position="after">
                    <field name="period_id"/>
                </field>
                -->
            </field>
        </record>
        
        <record id="hr_payslip_run_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
            
                <xpath expr="//button[@name='close_payslip_run']" position="replace">
                    <button name="confirm_payslip_run" type="object" string="Confirmar" states="draft" class="oe_highlight"/>
                </xpath>  
                
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" on_change="onchange_payslip()"/>
                </xpath>            
                <xpath expr="//field[@name='date_start']" position="replace">
                    <field name="date_start" on_change="onchange_payslip()"/>
                </xpath>            
                <xpath expr="//field[@name='date_end']" position="replace">
                    <field name="date_end" on_change="onchange_payslip()"/>
                </xpath>

                <xpath expr="//field[@name='slip_ids']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state','=','close')]}</attribute>
                </xpath>
                
            </field>
        </record>
        
    </data>
</openerp>
